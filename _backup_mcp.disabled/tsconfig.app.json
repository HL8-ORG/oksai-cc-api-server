{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./build",
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"types": ["node"]
	},
	"files": ["src/index.ts"],
	"include": ["src/**/*", "src/**/*.d.ts"],
	"exclude": ["jest.config.ts", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
