{
	"preset": "ts-jest",
	"testEnvironment": "node",
	"roots": [
		"<rootDir>/src"
	],
	"testMatch": [
		"**/__tests__/**/*.ts",
		"**/?(*.)+(spec|test).ts",
		"**/?(*.)+(e2e-spec).ts"
	],
	"transform": {
		"^.+\\.ts$": "ts-jest"
	},
	"collectCoverageFrom": [
		"src/**/*.ts",
		"!src/**/__tests__/**/*.ts",
		"!src/**/*.test.ts",
		"!src/**/*.dto.ts",
		"!src/**/*.entity.ts",
		"!src/e2e/**/*.e2e-spec.ts"
	],
	"coverageDirectory": "coverage",
	"coverageReporters": [
		"text",
		"lcov",
		"html"
	],
	"moduleNameMapper": {
		"^@oksai/(tenant|user|organization|role|audit|auth|analytics|reporting)$": "<rootDir>/../../libs/sys-plugins/$1/src",
		"^@oksai/(.*)$": "<rootDir>/../../libs/$1/src"
	},
	"moduleFileExtensions": [
		"ts",
		"js",
		"json"
	],
	"verbose": true
}
