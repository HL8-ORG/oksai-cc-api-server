{
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"@nestjs/*": ["./node_modules/@nestjs/*"],
			"@mikro-orm/*": ["./node_modules/@mikro-orm/*"],
			"@oksai/auth": ["libs/sys-plugins/auth/src/index.ts"],
			"@oksai/common": ["./libs/common/src/index.ts"],
			"@oksai/config": ["./libs/config/src/index.ts"],
			"@oksai/core": ["./libs/core/src/index.ts"],
			"@oksai/database": ["./libs/database/src/index.ts"],
			"@oksai/plugin": ["./libs/plugin/src/index.ts"],
			"@oksai/audit": ["libs/sys-plugins/audit/src/index.ts"],
			"@oksai/tenant": ["libs/sys-plugins/tenant/src/index.ts"],
			"@oksai/user": ["libs/sys-plugins/user/src/index.ts"],
			"@oksai/organization": ["libs/sys-plugins/organization/src/index.ts"],
			"@oksai/role": ["libs/sys-plugins/role/src/index.ts"],
			"@oksai/constants": ["./libs/constants/src/index.ts"],
			"@oksai/contracts": ["./libs/contracts/src/index.ts"],
			"@oksai/analytics": ["libs/sys-plugins/analytics/src/index.ts"],
			"@oksai/reporting": ["libs/sys-plugins/reporting/src/index.ts"],
			"@oksai/mcp-server": ["./libs/mcp-server/src/index.ts"],
			"@oksai/utils": ["./libs/utils/src/index.ts"]
		},
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": false,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"useDefineForClassFields": false
	},
	"extends": "./tsconfig.base.json"
}
